<div ng-app="App">

    <div ng-controller="CategoryController">

        <div id="CategorySelector" class="row jumbotron">
            <center>
                <h1>Välj kategori</h1>
                <ul>
                    <li ng-repeat="Cat in Categories"><a href="#" ng-click="getQuestions(Cat.ID)">{{Cat.Name}}</a></li>
                    <li><a href="#" ng-click="getMixedQuestions()">Blandade frågor</a></li>
                </ul>
            </center>
        </div>

        <div id="WordPictureTemplate" class="row jumbotron">
            <center>
                <h1>Skriv ordet på bilden</h1>
                <img src="http://placehold.it/800x400" /><br />
                <input type="text" id="answer" value="" />
                <button class="btn btn-lg btn-success" id="next">Svara</button>
            </center>
        </div>

        <div id="SentenceBuildTemplate" class="row jumbotron">
            <center>
                <h1>Bygg en mening av orden</h1>
                <img src="http://placehold.it/800x400" /><br />
                <input type="text" id="answer" value="" />
                <button class="btn btn-lg btn-success" id="next">Svara</button>
            </center>
        </div>



        <div id="PunctuationTemplate" class="row jumbotron">
            <center>
                <h1>Sätt ut rätt skiljetecknen</h1>
                <img src="http://placehold.it/800x400" /><br />
                <input type="text" id="answer" value="" />
                <button class="btn btn-lg btn-success" id="next">Svara</button>
            </center>
        </div>



        <div id="ClickColorTemplate" class="row jumbotron">
            <center>
                <h1>{{ variabel }}</h1>
                <img src="http://placehold.it/800x400" /><br />
                <h3>Klicka på den färg ordet beskriver</h3>
                <div class="row answers">
                    <div class="col-md-12">
                        <a class="colorlink" href="#"><div class="colorbox" style="background-color: red;"></div></a>
                        <a class="colorlink" href="#"><div class="colorbox" style="background-color: green;"></div></a>
                        <a class="colorlink" href="#"><div class="colorbox" style="background-color: yellow;"></div></a>
                        <a class="colorlink" href="#"><div class="colorbox" style="background-color: orange;"></div></a>
                        <a class="colorlink" href="#"><div class="colorbox" style="background-color: blue;"></div></a>
                    </div>
                </div>
                <input type="hidden" id="answer" value="" />
            </center>
        </div>


        <div id="CorrectAnswer" class="row jumbotron">
            <center>
                <h1>Rätt!</h1>
                <h3>Du svarade rätt</h3>
                <hr />

                <div id="CorrectNext">
                    <button class="btn btn-lg btn-success" id="next">Nästa fråga</button>
                </div>

                <!-- eller -->

                <div id="CorrectLast">
                    <h3>Detta var sista frågan. Skriv ditt namn</h3>
                    <input type="text" id="answer" value="" /><br /><br />
                    <button class="btn btn-lg btn-success" id="next">Visa poänglista</button>
                </div>
            </center>
        </div>


        <div id="WrongAnswer" class="row jumbotron">
            <center>
                <h1>Fel!</h1>
                <h3>Rätt svar var</h3>
                <h2>[Rätt svar]</h2>
                <hr />

                <div id="WrongNext">
                    <button class="btn btn-lg btn-success" id="next">Nästa fråga</button>
                </div>

                <!-- eller -->

                <div id="WrongLast">
                    <h3>Detta var sista frågan. Skriv ditt namn</h3>
                    <input type="text" id="answer" value="" /><br /><br />
                    <button class="btn btn-lg btn-success" id="next">Visa poänglista</button>
                </div>
            </center>
        </div>



        <div id="ScoreBoardTemplate" class="row jumbotron">
            <center>
                <h1>Poängtoppen för {blandade frågor}</h1>

                <table>
                    <tr>
                        <td>Nisse</td>
                        <td>25</td>
                    </tr>
                    <tr>
                        <td>Bengt</td>
                        <td>20</td>
                    </tr>
                    <tr>
                        <td>Lisa</td>
                        <td>15</td>
                    </tr>
                </table>

                <button class="btn btn-lg btn-success" id="start">Börja om</button>
            </center>
        </div>

    </div>

</div>